{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "sourceMap": true,
    "outDir": "ts-build",
    "jsx": "react",
    "strict": true,
    "strictFunctionTypes": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "downlevelIteration": true,
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "types": ["node", "jest", "react"]
  }
}
