{
  "name": "react-roguelike",
  "version": "0.2.0",
  "private": false,
  "description": "A roguelike game built with React and TypeScript.",
  "repository": "https://github.com/TimAstier/react-roguelike",
  "author": "Timoth√©e Astier <timotheee.astier@essec.edu>",
  "license": "MIT",
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/fontfaceobserver": "^0.0.6",
    "@types/howler": "^2.2.2",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@types/seedrandom": "^3.0.0",
    "@types/styled-components": "^5.1.9",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-config-storytel": "^7.0.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "fontfaceobserver": "^2.1.0",
    "konva": "^7.2.5",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-konva": "^17.0.2-0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "rpg-dice-roller": "^5.0.0",
    "seedrandom": "^3.0.5",
    "serve": "^12.0.0",
    "styled-components": "^5.2.3",
    "typescript": "^4.1.2",
    "use-image": "^1.0.7",
    "use-immer": "^0.5.1",
    "use-sound": "^2.1.0",
    "uuid": "^8.3.2",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "start": "serve -s build",
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx src",
    "prettier:base": "prettier --parser typescript --single-quote",
    "prettier:check": "npm run prettier:base -- --list-different \"src/**/*.{ts,tsx}\"",
    "prettier:write": "npm run prettier:base -- --write \"src/**/*.{ts,tsx}\"",
    "check-types": "tsc -p src --skipLibCheck --noEmit",
    "validate": "npm run lint && npm run prettier:check && npm run check-types && npm run test"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!rpg-dice-roller).+\\.js$"
    ]
  }
}
